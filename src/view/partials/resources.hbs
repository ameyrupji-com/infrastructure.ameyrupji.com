<div class="container" id="resources-main">
    <h1 class="title" data-aos="fade-right"><span class="title">Resources</span></h1>
    <br/>
    <div class="row container-btns" id="resource-btns" data-aos="zoom-out-up" data-aos-anchor-placement="top-center">
        <div class="col-md-12 text-center">
            <div class="btn-group center" role="group">
                <button type="button" class="btn btn-primary" id="resource-btn-prod">Prod</button>
                <button type="button" class="btn btn-light" id="resource-btn-beta">Beta</button>
            </div>
        </div>
    </div>
    <div class="row" data-aos="zoom-out-up" data-aos-anchor-placement="top-center">
        {{#each resources.list}}
        <div class="card resource-card" data-environment="{{this.environment}}">
            <div class="card-body">
                <div class="media" >
                    <img src="{{this.image-src}}" class="mr-4" alt="{{this.image-alt}}" width="50px" height="50px" >
                    <div class="media-body">
                        <h4 class="mt-0">{{this.name}}</h4>
                        <ul class="list-unstyled">
                            {{#each this.list}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>